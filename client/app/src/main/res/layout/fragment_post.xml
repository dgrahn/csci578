<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    tools:context="us.grahn.trojanow.presentation.post.read.PostFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:background="@color/post_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                android:text="[Author Name]"/>

            <TextView
                android:textColor="@color/text_secondary"
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="[Date]"
                android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Content]"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:textColor="@color/text_secondary"/>

            <LinearLayout
                android:background="@color/environment_background"
                android:id="@+id/environments_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:padding="@dimen/padding_small">
                <TextView
                    android:layout_width="fill_parent"
                    android:id="@+id/environments"
                    android:text="[Environments]"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/emotion_background"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/padding"
                android:id="@+id/remotions_layout"
                android:padding="@dimen/padding_small"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:id="@+id/remotions"
                    android:text="[Remotions]"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
